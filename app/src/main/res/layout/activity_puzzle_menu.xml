<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".PuzzleMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="-969dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/blueviolet"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bevan"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:text="PUZZLE TIME !"

                android:textColor="@android:color/black"
                android:textSize="36dp"
                android:textStyle="bold"
                android:transitionName="logo_text"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/hintLayout"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageHint"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/emilys_candy"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Click me"/>

        </LinearLayout>



        <ImageView
                android:layout_width="189dp"
                android:layout_height="150dp"
                android:id="@+id/btnMickey"
                android:src="@drawable/mickeyfriends"
                android:layout_marginTop="15dp"/>



            <ImageView
                android:layout_width="189dp"
                android:layout_height="150dp"
                android:id="@+id/btnPawPatrol"
                android:src="@drawable/pawpatrol"
                android:layout_marginTop="30dp"
                android:layout_below="@id/btnMickey"/>




    <ImageView
        android:layout_width="189dp"
        android:layout_height="150dp"
        android:id="@+id/btnFrozen"
        android:src="@drawable/frozen"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btnPawPatrol"/>

    <ImageView
        android:layout_width="189dp"
        android:layout_height="150dp"
        android:id="@+id/btnPrincesses"
        android:src="@drawable/princesses"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btnFrozen"
        android:layout_marginBottom="90dp"/>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>