<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueviolet"
    tools:context=".Frozen.SlidingPuzzleFrozen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageMickey"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sample"
                    android:text="Sample picture"
                    android:textStyle="bold|italic"
                    android:textSize="13dp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="145dp"
                    android:src="@drawable/frozen"
                    android:layout_below="@id/sample"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hintLayout"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageHint"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ty" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/emilys_candy"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="Click me"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@id/imageMickey">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/gold"
            android:fontFamily="@font/emilys_candy"
            android:text="Play Again"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutPuzzle"
        android:layout_marginTop="65dp"
        android:layout_below="@id/imageMickey"
        android:gravity="center">

        <com.deitel.littlethinkers.Frozen.GridViewFrozen
            android:id="@+id/gridFrozen"
            android:layout_width="290dp"
            android:layout_height="290dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@id/layoutPuzzle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/emilys_candy"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Number of moves: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtStepCount"

            android:fontFamily="@font/emilys_candy"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="0"/>

    </LinearLayout>




</RelativeLayout>