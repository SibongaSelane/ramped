<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightSkyBlue"
    tools:context=".Level1.Level1Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="-969dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/hintLayout"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageHint"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ty" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/emilys_candy"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Click me"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hintLayout"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/rounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/emilys_candy"
            android:text="Round 1"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/onecar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/choice1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:background="@color/transparent"
                android:fontFamily="@font/emilys_candy"
                android:padding="8dp"
                android:text="1"
                android:textSize="45dp" />

            <Button
                android:id="@+id/choice2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/transparent"
                android:fontFamily="@font/emilys_candy"
                android:padding="8dp"
                android:text="2"
                android:textSize="45dp" />

            <Button
                android:id="@+id/choice3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/transparent"
                android:fontFamily="@font/emilys_candy"
                android:padding="8dp"
                android:text="3"
                android:textSize="45dp" />

        </LinearLayout>


        <Button
            android:id="@+id/quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/numbers_button"
            android:fontFamily="@font/emilys_candy"
            android:padding="8dp"
            android:textAllCaps="false"
            android:text="BACK"></Button>

    </LinearLayout>
    </LinearLayout>
    </ScrollView>


</RelativeLayout>